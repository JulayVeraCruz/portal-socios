@model IEnumerable<PortalSocios.Models.Quotas>

@{
    ViewBag.Title = "Index";
}

<h3>Lista de Quotas</h3>

<p>
    @Html.ActionLink("Criar nova quota", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Montante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ano)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Periodicidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Montante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ano)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Periodicidade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.QuotaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.QuotaID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.QuotaID })
        </td>
    </tr>
}

</table>
