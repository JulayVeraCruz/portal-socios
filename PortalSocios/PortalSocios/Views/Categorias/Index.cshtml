@model IEnumerable<PortalSocios.Models.Categorias>

@{
    ViewBag.Title = "Index";
}

<h3>Lista de Categorias</h3>

<p>
    @Html.ActionLink("Criar nova categoria", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FaixaEtaria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumQuotasAnuais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorMensal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FaixaEtaria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumQuotasAnuais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorMensal)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CategoriaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CategoriaID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CategoriaID })
        </td>
    </tr>
}

</table>
