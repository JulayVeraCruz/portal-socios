<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/Content/Imagens/relvado.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Portal dos Sócios", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                    <li>@Html.ActionLink("Vantagens", "Vantagens", "Home")</li>
                    <li>@Html.ActionLink("Quotas", "Quotas", "Home")</li>

                    @if (User.Identity.IsAuthenticated) {
                        <li>@Html.ActionLink("Pagamentos", "Index", "Pagamentos")</li>
                    }

                    @if (User.IsInRole("Funcionario")) {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gestão da BD<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/Socios/Index">Sócios</a></li>
                                <li><a href="~/Quotas/Index">Quotas</a></li>
                                <li><a href="~/Pagamentos/Index">Pagamentos</a></li>
                                <li><a href="~/Funcionarios/Index">Funcionários</a></li>
                                <li><a href="~/Categorias/Index">Categorias</a></li>
                                <li><a href="~/Beneficios/Index">Benefícios</a></li>
                                <li><a href="~/UsersAdmin/Index">Utilizadores</a></li>
                                <li><a href="~/RolesAdmin/Index">Roles</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Clube Desportivo Coxos da Bola &copy; @DateTime.Now.Year - Todos os direitos reservados</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
