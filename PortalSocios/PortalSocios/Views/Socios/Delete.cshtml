@model PortalSocios.Models.Socios

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>Eliminar Sócio | Portal dos Sócios do Clube Desportivo Coxos da Bola</title>
</head>
<body>
    <div class="titulo"><h3>ELIMINAR SÓCIO</h3></div>
