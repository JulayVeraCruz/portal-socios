@model IEnumerable<PortalSocios.Models.Beneficios>

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>Lista de Benefícios | Portal dos Sócios do Clube Desportivo Coxos da Bola</title>
</head>
<body>
    <!-- título -->
    <div class="titulo"><h3>LISTA DE BENEFÍCIOS</h3></div>

    <!-- criar novo sócio -->
    <div class="col-md-12" style="text-align:center; margin-top: 20px;">
        <input type="button" class="btn btn-primary" value="Criar Novo Benefício" onclick="location.href='@Url.Action("Create", "Beneficios")'" style="font-size: 16px;" />
    </div>
    <hr />

    <!-- interface de pesquisa -->
    @using (Html.BeginForm()) {
        <p style="text-align: center;">
            @Html.TextBox("pesquisar", "", new { @class = "form-control", @maxlength = "30", @placeholder = "Pesquisa por descrição ou entidade", @style = "display: inline; width: 250px" })
            <input type="submit" class="btn btn-primary" value="Pesquisar" />
        </p>
    }


    <div style="text-align:center;">
        <div style="display: inline-block;">
            <!-- tabela de benefícios -->
            <table class="table">
                <!-- cabeçalhos -->
                <tr>
                    <th class="colCentro">@Html.DisplayNameFor(model => model.Descricao)</th>
                    <th class="colCentro">@Html.DisplayNameFor(model => model.EntidRespons)</th>
                    <th class="colCentro">Opções de Gestão</th>
                </tr>
                <!-- dados dos benefícios -->
                @foreach (var item in Model) {
                    <tr>
                        <td class="colEsq">@Html.DisplayFor(modelItem => item.Descricao)</td>
                        <td class="colEsq">@Html.DisplayFor(modelItem => item.EntidRespons)</td>
                        <!-- opções de gestão -->
                        <td class="colCentro">
                            @Html.ActionLink("Editar", "Edit", new { id = item.BeneficioID }) |
                            @Html.ActionLink("Detalhes", "Details", new { id = item.BeneficioID }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.BeneficioID })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>
