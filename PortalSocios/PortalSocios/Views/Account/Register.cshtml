@model PortalSocios.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title> Registar | Portal dos Sócios do Clube Desportivo Coxos da Bola</title>
    <style>

    </style>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.pt.min.js"></script>

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker3.min.css" />
</head>
<body>
    <div class="titulo"><h3>Inscrição</h3></div>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()

        <div class="titulo"><h4>Cria uma conta nova e torna-te sócio.</h4></div>
        <hr />
        <div class="container painel">
            <div class="col-md-12 form-inline">
                @Html.EditorFor(m => m.Socio.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "E-mail" } })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Palavra-passe", @style = "width: 230px;" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmar palavra-passe", @style = "width: 230px;" })      
            </div>
            <div class="col-md-12 form-inline">
                @Html.EditorFor(m => m.Socio.Nome, new { htmlAttributes = new { @class = "form-control reg1", @maxlength = "50", @placeholder = "Nome" } })
                @Html.EditorFor(m => m.Socio.BI, new { htmlAttributes = new { @class = "form-control reg1", @maxlength = "8", @placeholder = "BI/CC", @style = "width: 130px;" } })
                @Html.EditorFor(m => m.Socio.NIF, new { htmlAttributes = new { @class = "form-control reg1", @maxlength = "9", @placeholder = "NIF", style = "width: 130px;" } })
                @Html.EditorFor(m => m.Socio.DataNasc, new { htmlAttributes = new { @class = "form-control reg1", @placeholder = "Data de Nascimento", style = "width: 200px;" } })                
            </div>
            <div class="col-md-12 form-inline">
                @Html.DropDownList("CategoriaFK", null, "- Categoria -", htmlAttributes: new { @id = "cat", @class = "form-control reg1", @style = "width: 160px;" })
                @Html.EditorFor(m => m.Socio.Telemovel, new { htmlAttributes = new { @class = "form-control reg1", @maxlength = "9", @placeholder = "Telemóvel", @style = "width: 100px;" } })              
                @Html.EditorFor(m => m.Socio.Morada, new { htmlAttributes = new { @class = "form-control reg1", @maxlength = "80", @placeholder = "Morada" } })
                @Html.EditorFor(m => m.Socio.CodPostal, new { htmlAttributes = new { @class = "form-control reg1", @maxlength = "50", @placeholder = "Código Postal", style = "width: 200px;" } })               
            </div>
            <div class="col-md-12">
                <input type="file" name="foto" id="foto" class="reg2" />
            </div>
            <div class="col-md-12">
                @Html.ValidationSummary("")
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-primary" value="Criar conta" />
                </div>
            </div>
            <p class="col-md-12">
                Já tens uma conta? @Html.ActionLink("Entra.", "login", "Account")
            </p>
        </div>
    }
    <script type="text/javascript">
        $('#Socio_DataNasc').datepicker({
            format: "yyyy/mm/dd",
            endDate: "0d",
            startView: 2,
            maxViewMode: 2,
            language: "pt",
            orientation: "bottom left",
            autoclose: true
        });

        $('#cat option:contains("Categoria")').attr("disabled", "disabled");
    </script>
    </body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
