@model PortalSocios.Models.RoleViewModel

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>Criar Nova Função | Portal dos Sócios do Clube Desportivo Coxos da Bola</title>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</head>
<body>
    <div class="titulo"><h3>CRIAR NOVA FUNÇÃO</h3></div>
    <div class="titulo"><h5>@Html.ActionLink("- Voltar à lista -", "Index")</h5></div>
    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-horizontal painel2">
            @Html.ValidationSummary(true, "")

            <div class="form-group">
                @Html.Label("Função", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
        </div>
        <div class="col-md-12" style="text-align:center; margin-top:20px;">
            <input type="submit" value="Criar" class="btn btn-primary" style="font-size: 16px;" />
        </div>
    }
</body>
</html>
