@model PortalSocios.Models.Pagamentos

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>Eliminar Pagamento | Portal dos Sócios do Clube Desportivo Coxos da Bola</title>
</head>
<body>
    <div class="titulo"><h3>ELIMINAR PAGAMENTO</h3></div>
    <div class="titulo"><h4>Tem a certeza de que pretende eliminar este pagamento?</h4></div>
    <div class="titulo"><h5>@Html.ActionLink("- Voltar à lista -", "Index")</h5></div>
    <hr />

    <div class="container painel2">
        @Html.ValidationSummary(true, "")

        <div class="col-lg-6 dadosEsq">@Html.DisplayNameFor(model => model.Socio.Nome)</div>
        <div class="col-lg-6 dadosDir">@Html.DisplayFor(model => model.Socio.Nome)</div>

        <div class="col-lg-6 dadosEsq">@Html.DisplayNameFor(model => model.UserName)</div>
        <div class="col-lg-6 dadosDir">@Html.DisplayFor(model => model.UserName)</div>

        <div class="col-lg-6 dadosEsq">@Html.DisplayNameFor(model => model.RefMultibanco)</div>
        <div class="col-lg-6 dadosDir">@Html.DisplayFor(model => model.RefMultibanco)</div>

        <div class="col-lg-6 dadosEsq">@Html.DisplayNameFor(model => model.Montante)</div>
        <div class="col-lg-6 dadosDir">@Html.DisplayFor(model => model.Montante) €</div>

        <div class="col-lg-6 dadosEsq">@Html.DisplayNameFor(model => model.DataPagam)</div>
        @if (Model.DataPagam == null) {
            <div class="col-lg-6 dadosDir">-</div>
        }
        else {
            <div class="col-lg-6 dadosDir">@Html.DisplayFor(model => model.DataPagam)</div>
        }

        <div class="col-lg-6 dadosEsq">@Html.DisplayNameFor(model => model.DataPrevPagam)</div>
        <div class="col-lg-6 dadosDir">@Html.DisplayFor(model => model.DataPrevPagam)</div>

        <div class="col-lg-6 dadosEsq">@Html.DisplayNameFor(model => model.Multa)</div>
        @if (Model.Multa == null) {
            <div class="col-lg-6 dadosDir">-</div>
        }
        else {
            <div class="col-lg-6 dadosDir">@Html.DisplayFor(model => model.Multa) €</div>
        }

        <div class="col-lg-6 dadosEsq">Quota</div>
        <div class="col-lg-6 dadosDir">@Html.DisplayFor(model => model.Quota.Referencia)</div>

        <div class="col-lg-6 dadosEsq">Funcionário</div>
        <div class="col-lg-6 dadosDir">@Html.DisplayFor(model => model.Funcionario.Nome)</div>        
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="col-lg-12 form-actions no-color" style="text-align:center; margin-top:20px;">
            <input type="submit" value="Sim" class="btn btn-primary" style="font-size: 16px;" />
        </div>
    }
</body>
</html>
