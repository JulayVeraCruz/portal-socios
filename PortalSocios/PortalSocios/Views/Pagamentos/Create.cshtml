@model PortalSocios.Models.Pagamentos

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>Criar Novo Pagamento | Portal dos Sócios do Clube Desportivo Coxos da Bola</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.pt.min.js"></script>

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker3.min.css" />
</head>
<body>
    <div class="titulo"><h3>CRIAR NOVO PAGAMENTO</h3></div>
    <div class="titulo"><h5>@Html.ActionLink("- Voltar à lista -", "Index")</h5></div>
    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-horizontal painel2">
            @Html.ValidationSummary(true, "")

            <div class="form-group">
                @Html.LabelFor(model => model.SocioFK, "Sócio", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("SocioFK", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SocioFK, "")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UserName, "Username", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RefMultibanco, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.RefMultibanco, new { htmlAttributes = new { @class = "form-control", @maxlength = "9" } })
                    @Html.ValidationMessageFor(model => model.RefMultibanco, "")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AuxMontante, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.AuxMontante, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
                    @Html.ValidationMessageFor(model => model.AuxMontante, "")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DataPagam, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DataPagam, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DataPagam, "")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DataPrevPagam, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DataPrevPagam, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DataPrevPagam, "")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AuxMulta, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.AuxMulta, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
                    @Html.ValidationMessageFor(model => model.AuxMulta, "")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.QuotaFK, "Quota", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("QuotaFK", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.QuotaFK, "")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FuncionarioFK, "Funcionário", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("FuncionarioFK", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FuncionarioFK, "")
                </div>
            </div>
        </div>
        <div class="col-md-12" style="text-align:center; margin-top:20px;">
            <input type="submit" value="Criar" class="btn btn-primary" style="font-size: 16px;" />
        </div>
    }
    <script type="text/javascript">
        $('#DataPagam').datepicker({
            format: "yyyy/mm/dd",
            endDate: "0d",
            startView: 1,
            maxViewMode: 2,
            language: "pt",
            orientation: "bottom left",
            autoclose: true
        });

        $('#DataPrevPagam').datepicker({
            format: "yyyy/mm/dd",
            startDate: "-0d",
            startView: 1,
            maxViewMode: 2,
            language: "pt",
            orientation: "bottom left",
            autoclose: true
        });
    </script>
</body>
</html>
